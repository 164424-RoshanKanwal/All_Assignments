package com.lambda6;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.function.UnaryOperator;

public class UpperCaseEqui {

	public static void main(String[] args) {
		
		ArrayList<String> list = new ArrayList<>();
		list.add("hello");
		list.add("hello there!");
		list.add("Can you help?");
		list.add("hell");
		list.add("bye");
		
		//Iterator itr = list.iterator();
		
		UnaryOperator<ArrayList<String>> makeUpperCase = (s)-> {	//unary operator return the same type of 
			Iterator<String> itr = s.iterator();	//data type which was taken as an input 
			while(itr.hasNext()){					//taking input as arraylist and so the output is also a arraylist 
				
			 itr.next().toUpperCase();
			}
			return s;
			
		};
		
		replaceAll(list, makeUpperCase);
		/*System.out.println(unary.apply(list.get(0)));
		 replaceAll(unary);*/
	//	System.out.println(UnaryOperator.identity());
	}
	
	public static void replaceAll(ArrayList<String> list, UnaryOperator<ArrayList<String>> makeUpperCase){
		
		System.out.println(makeUpperCase.apply(list).get(0));
		
	}
	
}
